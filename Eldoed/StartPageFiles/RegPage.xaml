<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             mc:Ignorable="d"
             x:Class="Eldoed.StartPageFiles.RegPage"
             Title="Регистрация">

    <NavigationPage.TitleView>
        <Grid >
            <Label x:Name="_test1"
                   Text="Регистрация"
                   HorizontalOptions="Start"
                  VerticalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   FontSize="20"/>
            <Image Source="logo.png"
                   Aspect="AspectFill"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="End" 
                   HeightRequest="60"/>

        </Grid>
    </NavigationPage.TitleView>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15" Padding="0">
                <!-- Имя --><!--
                <StackLayout HeightRequest="100" 
                             VerticalOptions="Start" 
                             HorizontalOptions="FillAndExpand" 
                             Spacing="5" 
                             BackgroundColor="Transparent">
                    <Label Text="Имя" 
                           FontSize="Large" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center" 
                           FontAttributes="Bold" />
                    <Entry x:Name="_username"
                           Text=""
                           Keyboard="Text"
                           Placeholder="Введите имя"
                           TextColor="Black"
                           FontSize="Medium"
                           BackgroundColor="Transparent" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="CenterAndExpand" />
                </StackLayout>-->
                <!-- Номер телефона --><!--
                <StackLayout HeightRequest="100" 
                             VerticalOptions="Start" 
                             HorizontalOptions="FillAndExpand" 
                             Spacing="15" 
                             BackgroundColor="Transparent">
                    <Label Text="Номер телефона" 
                           FontSize="Large"  
                           HorizontalOptions="Center"
                           VerticalOptions="Center" 
                           FontAttributes="Bold" />
                    <Entry x:Name="_phone"
                           Text=""
                           Keyboard="Telephone"
                           Placeholder="Введите номер телефона(начиная с 7)"
                           TextColor="Black"
                           BackgroundColor="Transparent" 
                           FontSize="Medium"
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="CenterAndExpand"
                           >
                        <Entry.Behaviors>
                            <behavior:PhoneNumberMaskBehavior x:Name="PhoneMask" />
                            <behavior:EntryLengthValidator MaxLength="15"/>
                        </Entry.Behaviors>
                    </Entry>
                </StackLayout>-->
                <!-- Электронная почта -->
                <StackLayout HeightRequest="100" 
                             VerticalOptions="Start" 
                             HorizontalOptions="FillAndExpand" 
                             Spacing="15" 
                             BackgroundColor="Transparent">
                    <Label Text="Электронная почта" 
                           FontSize="Large" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center" 
                           FontAttributes="Bold" />
                    <Entry x:Name="_mail"
                           Text=""
                           Keyboard="Email"
                           Placeholder="Введите E-Mail"
                           TextColor="Black"
                           FontSize="Medium"
                           BackgroundColor="Transparent" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="CenterAndExpand" />
                </StackLayout>
                <!-- Пароль -->
                <StackLayout HeightRequest="150" 
                             VerticalOptions="Start" 
                             HorizontalOptions="FillAndExpand" 
                             Spacing="15" 
                             BackgroundColor="Transparent">
                    <Label Text="Пароль" 
                           FontSize="Large" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center" 
                           FontAttributes="Bold" />
                    <Entry x:Name="_pass1"
                           Text=""
                           Keyboard="Default"
                           Placeholder="Введите пароль"
                           IsPassword="True"
                           TextColor="Black"
                           FontSize="Medium"
                           BackgroundColor="Transparent" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="CenterAndExpand" />
                    <!-- Подтверждение пароля -->
                    <Entry x:Name="_pass2"
                           Text=""
                           Keyboard="Default"
                           Placeholder="Введите пароль еще раз"
                           IsPassword="True"
                           TextColor="Black"
                           FontSize="Medium"
                           BackgroundColor="Transparent" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="CenterAndExpand"
                           />
                </StackLayout>
                <Button x:Name="regButton" 
                    Text="Регистрация" 
                    TextColor="#E4E3E3" 
                    BackgroundColor="#FF6900" 
                    FontAttributes="Bold"                 
                    HorizontalOptions="Center" 
                    Margin="0,35,0,0" 
                    Padding="125,15,125,15" 
                        
                    Clicked="regAcceptButton_Clicked"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>